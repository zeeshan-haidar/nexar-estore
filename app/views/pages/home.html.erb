<%= render partial: 'pages/shared/products', locals: { products: @products } %>

<!-- Recently viewed -->
<section class="mt-5 mb-4">
  <div class="container text-dark">
    <header class="">
      <h3 class="section-title">Recently viewed</h3>
    </header>

    <div class="row gy-3">
      <% @recently_viewd_products.each do  |product| %>
        <div class="col-lg-2 col-md-4 col-4">
          <a href="<%= pages_product_detail_path(id: product.id) %>" class="img-wrap">
            <%= image_tag(primary_image_url(product), class: "img-thumbnail recent-products", height: "200", width: "200", title: product.name) %>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</section>
