<section class="my-3">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1" data-controller="signup">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { signup_target: "signupForm" }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="d-flex flex-row align-items-center mb-4">
                    &nbsp;<i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline mb-0 flex-fill" >
                      <%= f.text_field :first_name, class: "form-control", data: { signup_target: "requiredField", action: "blur->signup#validateOnBlur" } %>
                      <%= f.label :first_name,  class: "form-label" %>
                    </div>
                    &nbsp;&nbsp;&nbsp;
                    <div class="form-outline mb-0 flex-fill">
                      <%= f.text_field :last_name, class: "form-control", data: { signup_target: "requiredField", action: "blur->signup#validateOnBlur" } %>
                      <%= f.label :last_name,  class: "form-label" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.email_field :email, autocomplete: "email", class: "form-control", data: { signup_target: "requiredField", action: "blur->signup#validateEmail" }  %>
                      <%= f.label :email,  class: "form-label" %>
                      <em class="text-danger d-none" data-signup-target= "emailMessage" } >Please enter valid email address like abc@xyz.com</em>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-phone fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :mobile, class: "form-control", data: { signup_target: "requiredField", action: "blur->signup#validateOnBlur" } %>
                      <%= f.label :mobile,  class: "form-label" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.password_field :password, autocomplete: "new-password", class: "form-control no-border", data: { signup_target: "requiredField", action: "blur->signup#validatePassword" } %>
                      <%= f.label :password, class: "form-label" %>
                      <% if @minimum_password_length %>
                        <em class="text-danger d-none" data-signup-target="passwordMessage">(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", data: { signup_target: "requiredField", action: "blur->signup#validateConfirmationPassword" }  %>
                      <%= f.label :password_confirmation, class: "form-label" %>
                      <em class="text-danger d-none" data-signup-target="cpasswordMessage" >Confirmation password doesn't matched!</em>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-3">

                    <h6 class="mb-2 pb-1 me-4">Gender: </h6>

                    <div class="form-check form-check-inline">
                      <%= f.radio_button :gender, 'male', :checked => true,  class: "form-check-input"%>
                      <%= label :gender, 'Male' , class: "form-check-label"%>
                    </div>

                    <div class="form-check form-check-inline" data-controller="signup">
                      <%= f.radio_button :gender, 'female',  class: "form-check-input"%>
                      <%= label :gender, 'Female' , class: "form-check-label"%>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-home fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :street, class: "form-control", data: { signup_target: "requiredField", action: "blur->signup#validateOnBlur" } %>
                      <%= f.label "Street Address",  class: "form-label" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-map fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :city, class: "form-control", data: { signup_target: "requiredField", action: "blur->signup#validateOnBlur" } %>
                      <%= f.label :city,  class: "form-label" %>
                    </div>&nbsp;&nbsp;&nbsp;
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :country, class: "form-control", data: { signup_target: "requiredField", action: "blur->signup#validateOnBlur" } %>
                      <%= f.label :country,  class: "form-label" %>
                    </div>
                  </div>

                  <div class="form-check d-flex justify-content-center mb-4">
                    <label class="form-check-label" for="form2Example3">
                      Already registered? <%= render "devise/shared/links" %>
                    </label>
                  </div>
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= f.submit "Register", class: "btn btn-primary btn-lg", data: { action: "click->signup#submitForm" }%>
                  </div>
              <% end %>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                     class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<% content_for :custom_script_after do %>
  <script type="text/javascript" charset="utf-8">
      document.querySelectorAll('.form-outline').forEach((formOutline) => {
          // initialize form inputs for mdb
          new mdb.Input(formOutline).init();
      });
  </script>
<% end %>
