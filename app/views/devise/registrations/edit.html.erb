<div class="container w-50 my-5">
  <div class="card mb-3 px-5">
    <div class="col-md-12 border-right">
      <div class="p-3 py-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h4 class="text-right">Edit Profile</h4>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="row mt-3">
            <div class="col-md-6">
              <%= f.label :first_name, class: "labels" %><br /><%= f.text_field :first_name, autofocus: true, class: "form-control" %>
            </div>
            <div class="col-md-6">
              <%= f.label :last_name, class: "labels" %><br /><%= f.text_field :last_name, class: "form-control" %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-6">
              <%= f.label :email, class: "labels" %><br /><%= f.text_field :email, class: "form-control ", disabled: true %>
            </div>
            <div class="col-md-6">
              <%= f.label :mobile, class: "labels" %><br /><%= f.text_field :mobile, class: "form-control" %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-6">
              <%= f.label :password, class: "labels" %> </i><br />
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "leave blank if you don't want to change it", class: "form-control" %>
                <% if @minimum_password_length %>
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
            </div>
            <div class="col-md-6">
              <%= f.label :password_confirmation, class: "labels" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-6">
              <%= f.label :current_password, class: "labels" %> <br />
              <%= f.password_field :current_password, autocomplete: "current-password" , class: "form-control"%>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-6">
              <h6 class="mb-2 pb-1 me-4">Gender: </h6>

              <div class="form-check form-check-inline">
                <%= f.radio_button :gender, 'male',  class: "form-check-input"%>
                <%= label :gender, 'Male' , class: "form-check-label"%>
              </div>

              <div class="form-check form-check-inline">
                <%= f.radio_button :gender, 'female',  class: "form-check-input"%>
                <%= label :gender, 'Female' , class: "form-check-label"%>
              </div>
            </div>
            <div class="col-md-6">
              <%= f.label "Street Address", class: "labels" %><br /><%= f.text_field :street, class: "form-control" %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-6">
              <%= f.label :city, class: "labels" %><br /><%= f.text_field :city, class: "form-control" %>
            </div>
            <div class="col-md-6">
              <%= f.label :country, class: "labels" %><br /><%= f.text_field :country, class: "form-control" %>
            </div>
          </div>
          <div class="mt-5 text-center">
            <%= f.submit "Update profile", class: "btn btn-primary profile-button" %>
          </div>
        <% end %>
<!--        <h3>Cancel my account</h3>-->

<!--        <div>Unhappy? <%#= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>-->
        <%= link_to "Back", :back %>
        </div>
    </div>
  </div>
</div>
